{% extends "case/case.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block sub_content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <h2 class="govuk-heading-xl govuk-!-margin-top-6" data-cy="documents-heading">Documents</h2>
      
        <div class="govuk-button-group">
        {{ govukButton({
          text: "Add documents",
          href: "./documents/add"

        }) }}

        <a  class="govuk-link" target="_ukef_estore" href="{{eStoreUrl}}/{{ tfm.estore.siteName }}/CaseLibrary/{{ tfm.estore.buyerName }}/{{ tfm.estore.folderName}}" data-cy="estore-link">View in eStore</a>
      </div>
    </div>
  </div>
{% endblock %}